{
    "name": "WorkSafe",
    "version": "1.0",
    "description": "Just a worksafe mode for Chrome",
    "manifest_version": 2,
    "author": "cybor97",
    "permissions": [
        "activeTab",
        "<all_urls>"
    ],
    "icons": {},
    "browser_action": {
        "default_popup": "main.html",
        "default_icon": {}
    },
    "content_scripts": [
        {
            "matches": [
                "https://*/*",
                "http://*/*"
            ],
            "css": [
                "inject.css"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    }
}